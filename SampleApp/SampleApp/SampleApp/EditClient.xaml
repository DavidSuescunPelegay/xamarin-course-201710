<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleApp.EditClient">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding ClientId}" x:Name="editClientId" IsVisible="False"></Label>
            <Entry x:Name="editName" Text="{Binding Name}"></Entry>
            <Entry x:Name="editEmail" Text="{Binding Email}"></Entry>
            <Entry x:Name="editCity" Text="{Binding City}"></Entry>
            <Entry x:Name="editCountry" Text="{Binding Country}"></Entry>
            
            <Button Text="Guardar" Clicked="Button_OnClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>